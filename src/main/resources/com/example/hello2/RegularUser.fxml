<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #515151; -fx-border-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hello2.Controller.Display.ItemSelectRegularController">
    <TabPane layoutX="2.0" prefHeight="400.0" prefWidth="600.0" style="-fx-padding: 0 0 0 0;" stylesheets="@CSS/styles.css" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Main">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <Text fx:id="Welcome" fill="WHITE" layoutX="14.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome:">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Text>
                <Text fx:id="Balance" fill="WHITE" layoutX="17.0" layoutY="93.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Balance:" />

                <Button layoutX="14.0" layoutY="261.0" mnemonicParsing="false" onAction="#rentItems" style="-fx-background-color: pink; -fx-text-fill: black; -fx-font-size: 18px; -fx-pref-width: 150px; -fx-pref-height: 40px;" text="Rent" />
                <Button layoutX="436.0" layoutY="261.0" mnemonicParsing="false" onAction="#Return" style="-fx-background-color: pink; -fx-text-fill: black; -fx-font-size: 18px; -fx-pref-width: 150px; -fx-pref-height: 40px;" text="Return" />
                <Button fx:id="back" layoutX="272.0" layoutY="315.0" mnemonicParsing="false" onAction="#Back" style="-fx-background-color: pink;" text="Logout" />
                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="225.0" layoutY="97.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@Images/Windows_10_Default_Profile_Picture.svg.png" />
                </ImageView>
                <Label fx:id="Account" layoutX="17.0" layoutY="63.0" text="Account Status:" textFill="WHITE" />
            <Button fx:id="Deposit" layoutX="270.0" layoutY="261.0" mnemonicParsing="false" onAction="#Deposit" style="-fx-background-color: pink;" text="Deposit" />
            </AnchorPane>
        </Tab>
        <Tab onSelectionChanged="#ownedItems" text="Owned">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <ScrollPane fx:id="ownedItemsDisplay" hbarPolicy="NEVER" prefHeight="370.0" prefWidth="600.0" />
            </AnchorPane>
        </Tab>
    </TabPane>

</AnchorPane>
