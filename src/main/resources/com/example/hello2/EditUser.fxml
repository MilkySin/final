<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hello2.Controller.Users.EditUser">
    <VBox prefHeight="400.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #F1F1F1;" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>
        <Label text="Edit Item" />
        <Label text="User ID:" />
        <TextField fx:id="searchIdField" promptText="Enter ID" />
        <Button fx:id="searchItemButton" onAction="#searchUser" text="Search" />
        <Label text="User Details:" />
        <TextArea fx:id="itemDetailsArea" editable="false" prefHeight="150.0" prefWidth="200.0" wrapText="true" />
        <Button fx:id="saveChangesButton" onAction="#saveChanges" text="Save Changes">
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </Button>
        <Button fx:id="back" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#Back" text="Back" />
    </VBox>
    <VBox layoutX="200.0" prefHeight="400.0" prefWidth="400.0" spacing="10.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>
        <Label text="Edit Item" />
        <Label text="User ID:" />
        <TextField fx:id="itemIdField" promptText="Enter ID" />
        <Label fx:id="title" text="UserName:" />
        <TextField fx:id="UsernameField" promptText="Enter Name" />
        <Label text="Address" />
        <TextField fx:id="Addressfield" promptText="Enter Address" />
        <Label text="Account Type: " />
        <ChoiceBox fx:id="AccountTypeChoicebox" prefWidth="150.0" />
        <Label text="Phone Number: " />
        <TextField fx:id="NumberField" promptText="Enter Phone Number" />
        <Label text="Password: " />
      <TextField fx:id="PasswordField" promptText="Enter Password" />
        <HBox spacing="10.0" />
    </VBox>
</AnchorPane>
